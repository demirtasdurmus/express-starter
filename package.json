{
  "name": "express-starter",
  "version": "1.0.0",
  "description": "Express Starter Boilerplate",
  "keywords": [
    "express",
    "typescript",
    "starter",
    "boilerplate"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "dev:tsc": "tsc --watch --preserveWatchOutput -p tsconfig.build.json",
    "dev:node": "node --enable-source-maps --watch dist/index.js",
    "dev": "pnpm run \"/dev:/\"",
    "build": "tsc --pretty -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:int": "jest --config ./jest-int.config.ts",
    "test:int:watch": "jest --config ./jest-int.config.ts --watchAll",
    "test:coverage": "jest --config ./jest-int.config.ts --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint --fix .",
    "format:write": "prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,json,yml,yaml,md}\" --cache",
    "format:check": "prettier --check \"**/*.{js,mjs,cjs,ts,mts,cts,json,yml,yaml,md}\" --cache",
    "clean": "bash scripts/clean.sh",
    "commit": "commit",
    "prepare": "husky",
    "postinstall": "pnpm build"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/prompt-cli": "^20.2.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "^19.2.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "prettier-plugin-sort-imports": "^1.8.9",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.2.1"
  }
}
